<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BodyCheck"
    android:background="#2ba58c">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="359dp"
        android:layout_height="625dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/FootStep"
            android:layout_width="273dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_marginBottom="204dp"
            android:background="@drawable/button"
            android:backgroundTint="#fff"
            android:text="Foot Step"
            android:textColor="#2ba58c"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WorkOut" />

        <Button
            android:id="@+id/WorkOut"
            android:layout_width="273dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_marginBottom="292dp"
            android:background="@drawable/button"
            android:backgroundTint="#fff"
            android:text="WorkOut"
            android:textColor="#2ba58c"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Bmi" />

        <Button
            android:id="@+id/Logout"
            android:layout_width="143dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/button"
            android:backgroundTint="#fff"
            android:text="LogOut"
            android:textColor="#2ba58c"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.925"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/profile"
            android:layout_width="273dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:backgroundTint="#fff"
            android:text="Profile"
            android:textColor="#2ba58c"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FootStep"
            app:layout_constraintVertical_bias="0.102" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Your Daily calories"
            android:textColor="#fff"
            android:textSize="25dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Bmi"
            android:layout_width="273dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_marginBottom="384dp"
            android:background="@drawable/button"
            android:backgroundTint="#fff"
            android:text="BMI Calculator"
            android:textColor="#2ba58c"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Calo" />

        <Button
            android:id="@+id/Calo"
            android:layout_width="273dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_marginBottom="476dp"
            android:background="@drawable/button"
            android:backgroundTint="#fff"
            android:text="Calories"
            android:textColor="#2ba58c"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>